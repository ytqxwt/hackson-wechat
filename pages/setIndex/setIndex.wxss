.selection1{
  padding-top: 20rpx;
  height: 220rpx;
  width: 100%;
  font-size: 12px;
  color: #ffffff;
  background: #77c9d4;
}
.selection1 .s1-left{
  height: 150rpx;
  width: 33.3%;  
  text-align: center;
  float: left;
  position: relative;
}
.s1-left view{
  position: relative;
  bottom: 0rpx; 
  margin: 78rpx auto;
}
.selection1 .s1-mid{
  display: flex;
  width: 33.3%;  
  flex-direction: column;
  justify-content: center;
  color: #ffffff;
  float: left;
  text-align: center;
}
.selection1 .mid-img{
  height: 100rpx;
  width: 100rpx;
  border: 1px solid #ffffff;
  border-radius: 50%;
  margin:0 auto;
  margin-bottom: 20rpx;
}
.selection1 .s1-right{
  height: 150rpx;
  width: 33.3%; 
  display: flex;
  flex-direction: column;
  float: left;
  position: relative;
}
.s1-right view{
  position: absolute;
  bottom: -16rpx;
  margin-left: 70rpx;
}
radio{
  transform: scale(0.5);
}




