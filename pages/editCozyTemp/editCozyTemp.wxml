<view class="container">
  <view class="specific_template">
    <view class="add">
      <image bindtap="powerDrawer" data-statu="open" src="../../images/ok.png" style="width:22px;height:22px;float:right;margin-right:30rpx;margin-top:22rpx;" />
    </view>
  </view>
  <view class="drawer_screen" bindtap="powerDrawer" data-statu="close" wx:if="{{showModalStatus}}"></view>
  <!-- content -->
  <!-- 使用animation属性指定需要执行的动画 -->
  <view animation="{{animationData}}" class="drawer_box" wx:if="{{showModalStatus}}">
    <!-- drawer content -->
    <view class="drawer_title">请选择亲人</view>
    <view class="drawer_content">
      <view class="table">
        <view class="s">
          <view wx:for="{{listData}}" wx:key="*this">
            <view class="td" style="width:100rpx; height:22rpx; border-bottom:1px solid:#000000" bindtap="choseOrNot" id="" data-re="{{item.relation}}" style="background-color:{{pageBackgroundColor}}">
              {{item}}
            </view>
          </view>
        </view>
      </view>
    </view>
    <view class="text">
      <image src="../../images/{{number}}.png" style="width:700rpx;height:700rpx;margin-left:30rpx;margin-top:80rpx;" />
      <view wx:if="{{item.number==number}}" wx:for="{{texts}}" wx:key="*this" class="con" style="width:550rpx;height:200rpx;margin:0rpx auto;font-size:12px;margin-top:-40rpx;">
        <view style="margin-top:60rpx;">贴心小提示：</view>
        <view style="white-space:pre-line;text-indent: 40rpx;">{{item.text1}}</view>
      </view>
    </view>
  </view>
  <view class="chosen">
    <image src="/images/record.png" bindtouchstart="startRecode" bindtouchend="endRecode" style="width:30px;height:30px;" />
    <image src="/images/picture.png" bindtouchstart="startRecode" bindtouchend="endRecode" style="width:30px;height:30px;" />
    <image src="/images/music2.png" bindtouchstart="startRecode" bindtouchend="endRecode" style="width:30px;height:30px;" />
  </view>
</view>